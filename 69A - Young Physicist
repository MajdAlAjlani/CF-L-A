    for(int i=0 ; i<t ; i++)
        for(int j=0 ; j<3 ; j++)
        cin>>a[i][j];

    for(int i=0 ; i<3  ;i++)
        for(int j=0 ; j<t ;++j)
    {
        if(i==0) x+=a[j][i];
        else if(i==1) y+=a[j][i];
        else z+=a[j][i];

        cul+=a[j][i];
    }
    (x==0&&y==0&&z==0) ? cout<<"YES" : cout<<"NO";
